<!DOCTYPE html>
<!-- Coding by CodingLab | www.codinglabweb.com -->
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Card Slider</title>

    <!--Bootstrap css-->

    <link href="bootstrap-5.2.1-dist/css/bootstrap.css" rel="stylesheet">

    <!-- Swiper CSS -->
    <link rel="stylesheet" href="css/home-cards/swiper-bundle.min.css">

    <!-- CSS -->
    <link rel="stylesheet" href="css/home-cards/style.css">



</head>

<body onload="getUserGeoLoc()">
    <form action="/card" method="post">
        <% if(typeof userEmail!= 'undefined') { %>
        <input type="hidden" id="latitude" name="lat">
        <input type="hidden" id="longitude" name="long">
        <input type="hidden" value= "<%=userEmail %>" name="email">
        <%}%>
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><img src="media/images/emoji.ico" alt="Logo" width="30" height="24">
                    Skate
                    Mate</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/profile">Home</a>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" type ="submit">save my location</button>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/index">Sign-Out</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </form>
    <div class="slide-container swiper">

        <div class="slide-content" id="slider-content">

            <div class="card-wrapper swiper-wrapper">
                <% if(typeof matesArr!= 'undefined') { %>
                <% for(i=0; i<matesArr.length;i++) { %>
                    <div class="card swiper-slide">
                        <%if (matesArr[i].gender==='male' ) { %>
                            <div class="image-content">
                                <span class="overlay"></span>

                                <div class="card-image">
                                    <img src="media/images/home-page-cards/profile1.jpg" alt="" class="card-img">
                                </div>
                            </div>
                            <%} else {%>
                                <div class="image-content">
                                    <span class="overlay"></span>

                                    <div class="card-image">
                                        <img src="media/images/home-page-cards/profile2.jpg" alt="" class="card-img">
                                    </div>
                                </div>
                                <%}%>
                                    <div class="card-content">
                                        <h2 class="name">
                                            <%= matesArr[i].fullname%>
                                        </h2>
                                        <div class="description">
                                            <div>email: <%= matesArr[i].email %>
                                            </div>
                                            <div>phone number: <%= matesArr[i].phone %>
                                            </div>
                                            <div>gender: <%= matesArr[i].gender %>
                                            </div>
                                            <div>skate type: <%= matesArr[i].type %>
                                            </div>
                                            <div>skate level: <%= matesArr[i].level %>
                                            </div>
                                            <div>about myself: <%= matesArr[i].text %>
                                            </div>
                                        </div>
                                       
                                    </div>
                    </div>
                    <%}%>
                    <%}%>
            </div>
        </div>

        <div class="swiper-button-next swiper-navBtn"></div>
        <div class="swiper-button-prev swiper-navBtn"></div>
        <div class="swiper-pagination"></div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
        crossorigin="anonymous"></script>
</body>

<!-- Swiper JS -->
<script src="js/home-page-cards/swiper-bundle.min.js"></script>

<!-- JavaScript -->
<script src="js/home-page-cards/script.js"></script>
<script src="js/custome/geoLocation-onload.js"></script>

</html>